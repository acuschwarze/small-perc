{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "(gdb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}\\${fileBasenameNoExtension}.exe", // The program to debug
        "args": [],  // Arguments to pass to the program
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,  // Change to true if you want a separate console window
        "MIMode": "gdb",
        "miDebuggerPath": "gdb.exe",  // Path to the GDB executable (usually in MinGW/bin)
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build", // Task to run before launching the debugger
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }